if [ -z ${JUB_HOME+x} ]; then
  echo "JUB_HOME not set";
  return
fi

: ${JUB_PORT:=9292}
echo "\
server {
  listen 80;
  server_name thejub.pub;

  root $JUB_HOME/public;
  location /javascripts {}
  location /jquery-ui {}
  location /stylesheets {}
  location /images {}

  location / {
    proxy_pass http://localhost:$JUB_PORT;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}"
