{
  "src_folders" : ["test/ui"],
  "output_folder" : "test/artifacts",
  "custom_commands_path" : "",
  "custom_assertions_path" : "",
  "page_objects_path" : "",
  "globals_path" : "",

  "selenium" : {
    "start_process" : false,
    "cli_args" : {
      "webdriver.chrome.driver": "/usr/bin/chromedriver",
      "webdriver.log.file": "test/artifacts/browser.log",
      "webdriver.chrome.logfile": "test/artifacts/chrome.log"
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "path" : ""
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "loggingPrefs": {
          "browser": "ALL"
        }
      }
    }
  }
}
